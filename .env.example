# ===========================================
# RETURN 0; Website - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -------------------------------------------
# Sanity CMS Configuration
# -------------------------------------------
# Get these from: https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Token (for server-side operations)
# Create at: https://sanity.io/manage → API → Tokens
# Required permissions: Editor or higher
SANITY_API_TOKEN=your_sanity_token_here

# Sanity Revalidation Secret (for webhook-based revalidation)
# Generate a random string: openssl rand -base64 32
SANITY_REVALIDATE_SECRET=your_revalidation_secret_here

# -------------------------------------------
# Studio Protection
# -------------------------------------------
# HTTP Basic Auth credentials for /studio access
STUDIO_USERNAME=admin
STUDIO_PASSWORD=return0_iiitdwd_admin_2025

# -------------------------------------------
# Resend Email Configuration
# -------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email addresses for contact form
CONTACT_EMAIL_TO=return0@iiitdwd.ac.in
CONTACT_EMAIL_FROM=noreply@return0.iiitdwd.ac.in

# -------------------------------------------
# Site Configuration
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://return0.iiitdwd.ac.in

